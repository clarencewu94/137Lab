<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wuproject.morgagecalculator.MainScreen">

    <TextView
        android:id="@+id/HomeValueView"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Home Value"
        app:layout_constraintRight_toLeftOf="@+id/HomeInput"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downPaymentView"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:layout_marginRight="16dp"
        android:text="Down Payment"
        app:layout_constraintRight_toLeftOf="@+id/DownInput"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/InterestRateView"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:text="Interest Rate"
        app:layout_constraintRight_toLeftOf="@+id/InterestInput"
        app:layout_constraintTop_toBottomOf="@+id/downPaymentView" />

    <TextView
        android:id="@+id/TermsView"
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:text="Terms"
        app:layout_constraintTop_toBottomOf="@+id/InterestRateView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/PropertyTaxView"
        android:layout_width="111dp"
        android:layout_height="46dp"
        android:layout_marginTop="282dp"
        android:text="Property Tax Rate"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/PropertyInput"
        app:layout_constraintLeft_toRightOf="@+id/Calculate"
        android:layout_marginLeft="70dp" />

    <EditText
        android:id="@+id/HomeInput"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="number"
        android:text="Home Value Here"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/DownInput"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="Down Payment"
        app:layout_constraintTop_toBottomOf="@+id/HomeInput"
        tools:layout_editor_absoluteX="138dp" />

    <EditText
        android:id="@+id/InterestInput"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="number"
        android:text="Interest Rate "
        app:layout_constraintTop_toBottomOf="@+id/DownInput"
        tools:layout_editor_absoluteX="138dp" />

    <EditText
        android:id="@+id/PropertyInput"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Property Tax Rate"
        app:layout_constraintLeft_toRightOf="@+id/PropertyTaxView"
        app:layout_constraintTop_toBottomOf="@+id/InterestInput"
        tools:layout_editor_absoluteY="271dp" />

    <EditText
        android:id="@+id/FirstTerm"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_column="1"
        android:ems="10"
        android:inputType="number"
        android:text="15"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="210dp" />

</android.support.constraint.ConstraintLayout>

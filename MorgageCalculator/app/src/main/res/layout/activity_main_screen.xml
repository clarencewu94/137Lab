<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wuproject.morgagecalculator.MainScreen">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Home Value"
        app:layout_constraintRight_toLeftOf="@+id/HomeInput"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_marginRight="16dp"
        android:text="Down Payment"
        app:layout_constraintRight_toLeftOf="@+id/DownInput"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/InterestRate"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="Interest Rate"
        app:layout_constraintRight_toLeftOf="@+id/InterestInput"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:text="Terms"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/InterestRate" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:layout_marginTop="282dp"
        android:text="Property Tax Rate"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:layout_width="0dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/PropertyInput"
        app:layout_constraintLeft_toRightOf="@+id/Calculate"
        android:layout_marginLeft="68dp" />

    <EditText
        android:id="@+id/HomeInput"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="number"
        android:text="Home Value Here"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/DownInput"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="Down Payment"
        app:layout_constraintTop_toBottomOf="@+id/HomeInput"
        tools:layout_editor_absoluteX="138dp" />

    <EditText
        android:id="@+id/InterestInput"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="Interest Rate "
        app:layout_constraintTop_toBottomOf="@+id/DownInput"
        tools:layout_editor_absoluteX="137dp" />

    <EditText
        android:id="@+id/PropertyInput"
        android:layout_width="229dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Property Tax Rate"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/InterestInput" />

    <EditText
        android:id="@+id/FirstTerm"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_column="1"
        android:ems="10"
        android:inputType="number"
        android:text="15"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/SecondTerm"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/1stTerm"
        app:layout_constraintRight_toLeftOf="@+id/ThirdTerm"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/ThirdTerm"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="number"
        android:text="25"
        tools:layout_editor_absoluteY="214dp"
        app:layout_constraintRight_toLeftOf="@+id/FourthTerm"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/FourthTerm"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="number"
        android:text="30"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="214dp" />

    <EditText
        android:id="@+id/FifthTerm"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="number"
        android:text="35"
        tools:layout_editor_absoluteY="214dp"
        app:layout_constraintLeft_toRightOf="@+id/FourthTerm"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
